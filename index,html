<button onclick="myFunction()">Try it</button>

<p id="demo"></p>

<script>
function myFunction() {
var word = "baca";
var spell = "bca";
result = cek(word,spell)
  if (result === spell.length){
   alert("Found a Word with first match and include " + result);
  }
}

function cek(w,s) {
  var wrd = w;
  var spl = s;
  var word = wrd.split("");
  var spell = spl.split("");
  var a;
  var b;
  var result = 0;
  if(word[0] === spell[0])
  {
   	for(a=0 ; a < spell.length ; a++){ 
      for (b=0 ; b < word.length ; b++){
          if (a <= b){            
          	if(spell[a] === word[b]){
                 result++                 
             	 break;
            }
          }
      }
    }     
  }
  return result
}
</script>

